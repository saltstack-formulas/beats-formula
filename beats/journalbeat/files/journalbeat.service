[Unit]
Description=journalbeat
Documentation=https://github.com/mheese/journalbeat
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/share/journalbeat/bin/journalbeat -c /etc/journalbeat/journalbeat.yml -path.config /etc/journalbeat -path.logs /var/log/journalbeat
Restart=always

[Install]
WantedBy=multi-user.target
